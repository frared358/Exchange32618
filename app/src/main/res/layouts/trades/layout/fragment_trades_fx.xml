<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground">

    <TextView
        android:layout_width="390dp"
        android:layout_height="30dp"
        android:padding="1dip"
        android:text="Positions"
        android:layout_marginLeft="5dp"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#434445"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Grey"
            android:id="@+id/ll_position_list"
            android:orientation="horizontal">

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:layout_marginLeft="5dp"
               android:orientation="vertical">

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="USDCHN, "
                            android:fontFamily="sans-serif-condensed"
                            android:textColor="@color/Black"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="buy 1.00"
                       android:textColor="@color/colorPrimaryDarkBlue"
                       android:fontFamily="sans-serif-condensed"
                       android:textSize="18sp" />

               </LinearLayout>

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="@color/colorRollingArrowGrey"
                            android:fontFamily="sans-serif-condensed"
                            android:text="6.33793"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content" />

                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:layout_marginLeft="2dp"
                       android:layout_marginRight="2dp"
                       android:src="@drawable/pointer"/>

                   <TextView
                       android:layout_width="wrap_content"
                       android:fontFamily="sans-serif-condensed"
                       android:textColor="@color/colorRollingArrowGrey"
                       android:text="6.33159 "
                       android:textStyle="bold"
                       android:textSize="18sp"
                       android:layout_height="wrap_content" />
               </LinearLayout>

                       </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:layout_gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:height="30dp"
                    android:text="-184.48"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="#D50000"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_position_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/Grey"
                android:visibility="visible"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="5dp"
                    android:text="2018.02.23 6:43:57"
                    android:textColor="@color/colorRollingArrowGrey"
                    android:textSize="15sp"
                    android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="S / L:"
                        android:textColor="@color/colorRollingArrowGrey"
                        android:textSize="15sp"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:text="T / P:"
                        android:textColor="@color/colorRollingArrowGrey"
                        android:textSize="15sp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="ID:"
                        android:textColor="@color/colorRollingArrowGrey"
                        android:textSize="15sp"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="-"
                        android:layout_gravity="right"
                        android:textColor="@color/colorRollingArrowGrey"
                        android:textSize="15sp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="right"
                        android:text="-"
                        android:textColor="@color/colorRollingArrowGrey"
                        android:textSize="15sp"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="right"
                        android:text="303346903"
                        android:textColor="@color/colorRollingArrowGrey"
                        android:textSize="15sp"
                        android:layout_height="wrap_content" />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Swap:"
                        android:textColor="@color/colorRollingArrowGrey"
                        android:textSize="15sp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Taxes:"
                        android:textColor="@color/colorRollingArrowGrey"
                        android:textSize="15sp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Commission:"
                        android:textColor="@color/colorRollingArrowGrey"
                        android:textSize="15sp"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="0.00"
                        android:layout_gravity="right"
                        android:textColor="@color/colorRollingArrowGrey"
                        android:textSize="15sp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="right"
                        android:text="0.00"
                        android:textColor="@color/colorRollingArrowGrey"
                        android:textSize="15sp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="right"
                        android:text="0.00"
                        android:textColor="@color/colorRollingArrowGrey"
                        android:textSize="15sp"
                        android:layout_height="wrap_content" />


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


                </LinearLayout>
        </LinearLayout>
