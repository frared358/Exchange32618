<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/popup_background"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ALERT HEADING"
        android:id="@+id/alert_heading"
        android:textColor="@color/colorWhite"
        android:padding="10dp"
        android:textAlignment="center"
        android:textSize="20sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorGreay" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/alert_option_layout"
        android:orientation="vertical">
        <TextView
            android:textSize="20sp"
            android:textColor="@color/colorWhite"
            android:text="Set Alert"
            android:id="@+id/set_alert_layout"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@color/BlueGrey"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:text="Close"
            android:id="@+id/close_alert_layout"
            android:textSize="20sp"
            android:padding="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:background="@color/colorBlackTransperDialog"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_alert_layout"
        android:visibility="gone"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/operator_radiogroup"
                android:orientation="horizontal">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:buttonTint="@color/colorWhite"
                    android:checked="false"
                    android:layout_weight="1"
                    android:textColor="@color/colorWhite"
                    android:text="@string/lessText"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:layout_weight="1"
                    android:buttonTint="@color/colorWhite"
                    android:checked="false"
                    android:textColor="@color/colorWhite"
                    android:text="@string/greaterText"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:layout_weight="1"
                    android:buttonTint="@color/colorWhite"
                    android:checked="false"
                    android:textColor="@color/colorWhite"
                    android:text="@string/equalsText"/>
            </RadioGroup>
        </LinearLayout>

        <EditText
            android:id="@+id/editText_alert_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="20"
            android:layout_margin="20dp"
            android:focusable="true"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:backgroundTint="@color/colorWhite"
            android:textCursorDrawable="@null" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:padding="20dp"
                    android:layout_margin="5dp"
                    android:id="@+id/cancel_alert_layout"
                    android:text="Cancel"
                    android:textSize="20sp"
                    android:background="@color/colorBlackTransperDialog"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"
                    android:padding="20dp"
                    android:id="@+id/save_alert_layout"
                    android:text="Save"
                    android:textSize="20sp"
                    android:background="@color/colorBlackTransperDialog"/>

            </LinearLayout>


            </LinearLayout>
    </LinearLayout>