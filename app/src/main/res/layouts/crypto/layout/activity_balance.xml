<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBinanceBG"
    tools:context="com.affwl.exchange.crypto.BalanceActivity">

   <LinearLayout
       android:id="@+id/llBalance"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_above="@+id/llDepositeWithdraw"
       android:orientation="vertical">

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:background="@color/colorGreyDark">

           <TextView
               android:id="@+id/txtVBackBalance"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="10dp"
               android:paddingTop="5dp"
               android:paddingBottom="5dp"
               android:paddingRight="15dp"
               android:paddingLeft="15dp"
               android:textColor="@color/colorWhite"
               android:textSize="22sp"
               android:text="â®"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Balance"
               android:layout_centerInParent="true"
               android:textSize="18sp"
               android:layout_margin="5dp"
               android:textColor="@color/colorWhite"/>

       </RelativeLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:padding="10dp"
           android:background="@color/colorGreyLiterDark"
           android:layout_marginBottom="5dp"
           android:gravity="center_horizontal">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="18sp"
               android:text="BTC"
               android:textColor="@color/colorWhite"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="16sp"
               android:text="BItcoin"
               android:textColor="@color/colorWhite"/>

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="5dp">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="@color/colorBinanceTextColor"
                   android:textSize="16sp"
                   android:layout_alignParentLeft="true"
                   android:layout_centerVertical="true"
                   android:text="Total"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="@color/colorWhite"
                   android:textSize="16sp"
                   android:layout_margin="5dp"
                   android:layout_alignParentRight="true"
                   android:layout_centerVertical="true"
                   android:text="0.0899555"/>

           </RelativeLayout>

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="5dp">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="@color/colorBinanceTextColor"
                   android:textSize="16sp"
                   android:layout_alignParentLeft="true"
                   android:layout_centerVertical="true"
                   android:text="Avaliable"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="@color/colorWhite"
                   android:textSize="16sp"
                   android:layout_margin="5dp"
                   android:layout_alignParentRight="true"
                   android:layout_centerVertical="true"
                   android:text="0.0899555"/>

           </RelativeLayout>

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="5dp">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="@color/colorBinanceTextColor"
                   android:textSize="16sp"
                   android:layout_alignParentLeft="true"
                   android:layout_centerVertical="true"
                   android:text="In Order"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="@color/colorWhite"
                   android:textSize="16sp"
                   android:layout_margin="5dp"
                   android:layout_alignParentRight="true"
                   android:layout_centerVertical="true"
                   android:text="0.0000000"/>

           </RelativeLayout>

           <View
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="@color/colorGreay"/>

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="5dp">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="@color/colorBinanceTextColor"
                   android:textSize="16sp"
                   android:layout_alignParentLeft="true"
                   android:layout_centerVertical="true"
                   android:text="Estimated Value(BTC)"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="@color/colorWhite"
                   android:textSize="16sp"
                   android:layout_margin="5dp"
                   android:layout_alignParentRight="true"
                   android:layout_centerVertical="true"
                   android:text="0.005678"/>

           </RelativeLayout>

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="5dp">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="@color/colorBinanceTextColor"
                   android:textSize="16sp"
                   android:layout_alignParentLeft="true"
                   android:layout_centerVertical="true"
                   android:text="Estimated Value($)"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="@color/colorWhite"
                   android:textSize="16sp"
                   android:layout_margin="5dp"
                   android:layout_alignParentRight="true"
                   android:layout_centerVertical="true"
                   android:text="545.89"/>

           </RelativeLayout>

       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@color/colorGreyLiterDark"
           android:orientation="vertical">

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Go To Trade"
               android:textColor="@color/colorBinanceTextColor"
               android:textSize="16sp"
               android:padding="5dp"/>

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="BTC/USDT"
                   android:textColor="@color/colorWhite"
                   android:textSize="16sp"
                   android:padding="5dp"/>

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerInParent="true">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="9288.21"
                       android:textColor="@color/colorBinanceTextColor"
                       android:textSize="16sp"
                       android:padding="2dp"/>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="9288.21$"
                       android:textColor="@color/colorBinanceTextColor"
                       android:textSize="12sp"
                       android:padding="2dp"/>

               </LinearLayout>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="+4.56"
                   android:textColor="@color/colorHigh"
                   android:textSize="16sp"
                   android:layout_alignParentRight="true"
                   android:padding="5dp"/>

           </RelativeLayout>

           <View
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="@color/colorGreay"/>

       </LinearLayout>

   </LinearLayout>

    <LinearLayout
        android:id="@+id/llDepositeWithdraw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/txtVBalanceDeposite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:background="@color/colorHigh"
            android:textSize="16sp"
            android:text="Deposite"
            android:gravity="center"
            android:padding="5dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/txtVBalanceWithdraw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:background="@color/colorLow"
            android:textSize="16sp"
            android:text="Withdraw"
            android:gravity="center"
            android:padding="5dp"
            android:layout_weight="1"/>

    </LinearLayout>
</RelativeLayout>
