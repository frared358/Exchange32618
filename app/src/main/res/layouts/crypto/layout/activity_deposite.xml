<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBinanceBG"
    tools:context="com.affwl.exchange.crypto.DepositeActivity">


    <RelativeLayout
        android:id="@+id/rlDepositeHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2dp"
        android:background="@color/colorGreyDark">

        <TextView
            android:id="@+id/txtVBackDepositeFund"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:textColor="@color/colorWhite"
            android:textSize="22sp"
            android:text="❮"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deposite"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:textColor="@color/colorWhite"/>


        <TextView
            android:id="@+id/txtVDepositeHistoryClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="5dp"
            android:textSize="13sp"
            android:textColor="@color/colorWhite"
            android:layout_centerVertical="true"
            android:text="History"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rlDepositeCoinSelection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:background="@color/colorGreyLiterDark">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Coin"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:layout_centerVertical="true"
            android:textColor="@color/colorWhite"/>

        <TextView
            android:id="@+id/txtVDepositeCoinSelection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="》"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/colorWhite"/>

    </RelativeLayout>

</LinearLayout>
