<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.affwl.exchange.sport.MatchOddsActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="@string/app_name">

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtVAllSportO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_margin="3dp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:text="All Sport ã€‹"/>

            <TextView
                android:id="@+id/txtVSportNameO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_margin="3dp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:text=""/>

            <TextView
                android:id="@+id/txtVTournamentNameO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_margin="3dp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:text=""/>

            <TextView
                android:id="@+id/txtVMatchName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_margin="3dp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:text=""/>

        </LinearLayout>

    </HorizontalScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGreay"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycleViewMatchOdds"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txtVMatchOddNoData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NO DATA.."
        android:textSize="16sp"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:gravity="center"
        android:visibility="gone"
        android:background="@color/colorGreay"
        android:textColor="@color/colorRed"/>

</LinearLayout>
