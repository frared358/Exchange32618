<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llDialogBetPlace"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:padding="2dp"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/txtVRunnerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        android:layout_margin="5dp"
        android:visibility="gone"
        android:text="South Africa" />

    <View
        android:layout_width="match_parent"
        android:background="@color/colorGreay"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="1dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:text="STACK"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/txtVStackDecrement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="16sp"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:background="@color/colorReddishGreay"/>

        <EditText
            android:id="@+id/editTxtStackValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3.0"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textStyle="bold"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:inputType="number"
            android:background="@color/colorReddishGreay"/>

        <TextView
            android:id="@+id/txtVStackIncrement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textStyle="bold"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:background="@color/colorReddishGreay"/>

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:text="ODD"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/txtVOddDecrement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:background="@color/colorReddishGreay"/>

        <EditText
            android:id="@+id/editTxtVOddValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7.6"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textStyle="bold"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:inputType="number"
            android:background="@color/colorReddishGreay"/>

        <TextView
            android:id="@+id/txtVOddIncrement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:background="@color/colorReddishGreay"/>

    </LinearLayout>

    <TextView
        android:id="@+id/txtVProfitValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/colorGreen"
        android:layout_margin="10dp"
        android:text="Profit CHIPS 19.80"/>

    <Button
        android:id="@+id/btnBetPlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="16sp"
        android:background="@color/colorGreen"
        android:textColor="@color/colorWhite"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Bet"/>

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:textColor="@color/colorBlack"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:text="One Click Betting"/>

</LinearLayout>