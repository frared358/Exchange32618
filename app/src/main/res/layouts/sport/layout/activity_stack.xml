<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".sport.StackActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="Edit Values"
        android:textColor="@color/colorBlack"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/editTxtStackValue1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="5dp"
        android:padding="5dp"
        android:textStyle="bold"
        android:gravity="center"
        android:inputType="number"
        android:background="@drawable/border_greay_small"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/editTxtStackValue2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="5dp"
        android:padding="5dp"
        android:textStyle="bold"
        android:gravity="center"
        android:inputType="number"
        android:background="@drawable/border_greay_small"
        android:textSize="16dp" />


    <EditText
        android:id="@+id/editTxtStackValue3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="5dp"
        android:padding="5dp"
        android:textStyle="bold"
        android:gravity="center"
        android:inputType="number"
        android:background="@drawable/border_greay_small"
        android:textSize="16dp" />

    <Button
        android:id="@+id/btnStackSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:padding="1dp"
        android:text="OK"
        android:background="@color/colorReddishGreay"
        android:textColor="@color/colorWhite"
        android:textSize="18dp" />

</LinearLayout>
