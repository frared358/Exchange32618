<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".sport.SettingsActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="@string/app_name">

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <Switch
        android:id="@+id/oneclickswitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:checked="true"
        android:gravity="left"
        android:padding="3dp"
        android:text="@string/Setting_switch"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_margin="10dp"
        android:background="@color/colorBlack"
        android:visibility="visible" />

    <Switch
        android:id="@+id/CancelSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:checked="true"
        android:gravity="left"
        android:padding="3dp"
        android:text="Cancel unmatched bets with Trade button"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_margin="10dp"
        android:background="@color/colorBlack"
        android:visibility="visible" />

    <Switch
        android:id="@+id/ShowACSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:checked="true"
        android:gravity="left"
        android:padding="3dp"
        android:text="Show Account Balance"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_margin="10dp"
        android:background="@color/colorBlack"
        android:visibility="visible" />

    <Switch
        android:id="@+id/WarningSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:checked="true"
        android:gravity="left"
        android:padding="3dp"
        android:text="Activate Warning Sounds"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_margin="10dp"
        android:background="@color/colorBlack"
        android:visibility="visible" />

    <Switch
        android:id="@+id/NotifySwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:checked="true"
        android:gravity="left"
        android:padding="3dp"
        android:text="Show Notifications"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_margin="10dp"
        android:background="@color/colorBlack"
        android:visibility="visible" />

    <Switch
        android:id="@+id/MenuOverSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:checked="true"
        android:gravity="left"
        android:padding="3dp"
        android:text="Show Menus Overlapped"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_margin="10dp"
        android:background="@color/colorBlack"
        android:visibility="visible" />

    <Switch
        android:id="@+id/CashoutSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:checked="true"
        android:gravity="left"
        android:padding="3dp"
        android:text="Enable Cashout"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_margin="10dp"
        android:background="@color/colorBlack"
        android:visibility="visible" />

</LinearLayout>
