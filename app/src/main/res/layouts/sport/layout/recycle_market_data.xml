<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="5dp">

    <LinearLayout
        android:id="@+id/llDispMarketData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/txtVRunnerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="South Africa"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/txtVExposerData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llMarketData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/llBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/colorBlueBet1"
            android:layout_marginRight="5dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/txtVBackData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="2.56"/>

            <TextView
                android:id="@+id/txtVBackChips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CHIPS 454"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/colorRedBet1"
            android:layout_weight="1">

            <TextView
                android:id="@+id/txtVLayData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="2.56"/>

            <TextView
                android:id="@+id/txtVLayChips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CHIPS 454"/>

        </LinearLayout>


    </LinearLayout>

        <TextView
            android:id="@+id/txtVActiveResult"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:textStyle="bold"
            android:gravity="center"
            android:visibility="gone"
            android:textSize="15sp"
            android:textColor="@color/colorRed"
            android:background="@color/colorRedBetTrasparent"
            android:layout_weight="1"/>

</LinearLayout>