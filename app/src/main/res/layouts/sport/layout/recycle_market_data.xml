<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/txtVRunnerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="South Africa"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CHIPS 0.00"
            android:visibility="gone"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/colorBlueBet"
        android:layout_marginRight="5dp"
        android:layout_weight="1.5">

        <TextView
            android:id="@+id/txtVBackData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18dp"
            android:text="2.56"/>

        <TextView
            android:id="@+id/txtVBackChips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CHIPS 454"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/colorRedBet"
        android:layout_weight="1.5">

        <TextView
            android:id="@+id/txtVLayData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18dp"
            android:text="2.56"/>

        <TextView
            android:id="@+id/txtVLayChips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CHIPS 454"/>

    </LinearLayout>
</LinearLayout>