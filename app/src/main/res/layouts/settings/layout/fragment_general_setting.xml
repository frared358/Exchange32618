                    android:textColor="@color/colorBlack"
                    android:textSize="20sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorGreayDark" />

                <LinearLayout
                    android:layout_width="match_parent"
