<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.affwl.exchange.settings.SportsSettingFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:background="@color/colorBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Switch
            android:id="@+id/oneclickswitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:checked="true"
            android:gravity="left"
            android:textStyle="bold"
            android:thumbTint="@color/colorGreay"
            android:trackTint="@color/colorWhite"
            android:padding="3dp"
            android:textColor="@color/colorWhite"
            android:text="@string/Setting_switch"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_margin="10dp"
            android:background="@color/colorBlack"
            android:visibility="visible" />

        <Switch
            android:id="@+id/CancelSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:checked="true"
            android:gravity="left"
            android:thumbTint="@color/colorGreay"
            android:trackTint="@color/colorWhite"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:padding="3dp"
            android:text="Cancel unmatched bets with Trade button"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_margin="10dp"
            android:background="@color/colorBlack"
            android:visibility="visible" />

        <Switch
            android:id="@+id/ShowACSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:checked="true"
            android:gravity="left"
            android:thumbTint="@color/colorGreay"
            android:trackTint="@color/colorWhite"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:padding="3dp"
            android:text="Show Account Balance"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_margin="10dp"
            android:background="@color/colorBlack"
            android:visibility="visible" />


        <Switch
            android:id="@+id/NotifySwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:checked="true"
            android:thumbTint="@color/colorGreay"
            android:trackTint="@color/colorWhite"
            android:textColor="@color/colorWhite"
            android:gravity="left"
            android:textStyle="bold"
            android:padding="3dp"
            android:text="Show Notifications"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_margin="10dp"
            android:background="@color/colorBlack"
            android:visibility="visible" />

        <Switch
            android:id="@+id/MenuOverSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:checked="true"
            android:textStyle="bold"
            android:thumbTint="@color/colorGreay"
            android:trackTint="@color/colorWhite"
            android:textColor="@color/colorWhite"
            android:gravity="left"
            android:padding="3dp"
            android:text="Show Menus Overlapped"
            android:textSize="15sp" />


    </LinearLayout>
    </ScrollView>


</FrameLayout>
