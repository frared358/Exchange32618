<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:background="@android:drawable/list_selector_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/Itema"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="3dp"
        android:text="Charts"
        android:textStyle="bold"
        android:textSize="18dp"
        android:padding="10dp"
        android:textColor="@color/Black"
        tools:ignore="HardcodedText" />
    <View
        android:layout_width="match_parent"
        android:background="@color/Black"
        android:layout_height="1dp"/>
    <LinearLayout
        android:id="@+id/llnew_window"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivadd"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:padding="5dp"
            android:src="@drawable/ic_add_black_24dp" />

        <TextView
            android:id="@+id/Itemb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:text="New Window"
            android:textColor="@color/Black"
            android:textSize="16dp"
            tools:ignore="HardcodedText" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:id="@+id/lleur"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/lleuro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/cbeuro"
                android:textColor="@color/Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:buttonTint="@color/Black"
                android:text=" EURUSD ,M5"
                android:textSize="16dp" />
            <ImageView
                android:id="@+id/ivadd1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:padding="5dp"
                android:src="@drawable/ic_drag" />
        </LinearLayout>
<LinearLayout
    android:id="@+id/llchart"
    android:visibility="gone"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/lleuro1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/cbeuro1"
            android:textColor="@color/Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:buttonTint="@color/Black"
            android:text=" EURUSD ,M5"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/ivadd2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:padding="5dp"
            android:src="@drawable/ic_drag" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llth"
        android:layout_width="wrap_content"
        android:padding="3dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivadd3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:padding="5dp"
            android:src="@drawable/ic_drag" />
        <TextView
            android:layout_width="wrap_content"
            android:text="Tile Horizontally"
            android:textSize="16dp"
            android:textColor="@color/Black"
            android:layout_height="match_parent" />



    </LinearLayout>
    <LinearLayout
        android:id="@+id/lltv"
        android:layout_width="wrap_content"
        android:padding="3dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivadd4"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:padding="5dp"
            android:src="@drawable/ic_drag" />
        <TextView
            android:layout_width="wrap_content"
            android:text="Tile Vertically"
            android:textSize="16dp"

            android:textColor="@color/Black"
            android:layout_height="wrap_content" />



    </LinearLayout>
</LinearLayout>

        <TextView
            android:id="@+id/Itemd"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:textColor="@color/Black"
            android:background="@color/lite_blue"
            android:layout_marginTop="10dp"
            android:text="REMOVE"
            tools:ignore="HardcodedText" />

    </LinearLayout>
</LinearLayout>