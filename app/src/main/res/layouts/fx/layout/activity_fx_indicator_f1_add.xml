<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0E0E0"
    android:id="@+id/mylayout"

    tools:context="com.affwl.exchange.fx.FX_indicator_f1_add_Activity">
    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:navigationContentDescription="@string/abc_action_bar_up_description"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Average Directional Movement Index"
        android:gravity="center"
        tools:ignore="MissingPrefix"
        fontPath="fonts/RobotoCondensed-Regular.ttf"
        android:id="@+id/toolbar2" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spinner3"
        android:layout_alignStart="@+id/spinner3"
        android:layout_below="@+id/toolbar2"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="25dp"
        android:text="PARAMETERS"
        android:textColor="#000"
        android:textSize="14dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView27"
        android:layout_alignStart="@+id/textView27"
        android:layout_below="@+id/textView27"
        android:layout_marginTop="14dp"
        android:focusable="true"
        android:hint="Period:" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText"
        android:layout_below="@+id/editText"
        android:layout_marginTop="26dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="16dp"
        android:text="STYLES" />

    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/spinner4"
        android:layout_alignLeft="@+id/spinner4"
        android:layout_alignStart="@+id/spinner4"
        android:autofillHints="Style"
        android:drawSelectorOnTop="true"
        android:entries="@array/array_name"
        android:layout_marginBottom="14dp" />

    <Spinner
        android:id="@+id/spinner4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:autofillHints="+DI"
        android:drawSelectorOnTop="true"
        android:entries="@array/array_name"
        android:layout_marginStart="12dp" />

    <Spinner
        android:id="@+id/spinner5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spinner4"
        android:layout_alignStart="@+id/spinner4"
        android:layout_below="@+id/spinner4"
        android:drawSelectorOnTop="true"
        android:entries="@array/array_name"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/textView32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView31"
        android:layout_alignStart="@+id/textView31"
        android:layout_below="@+id/spinner5"
        android:layout_marginTop="38dp"
        android:autofillHints="-DI"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="16dp"
        android:text="LEVEL" />
    <EditText
        android:id="@+id/editText1"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView27"
        android:layout_alignStart="@+id/textView27"
        android:layout_below="@+id/textView32"
        android:layout_marginTop="14dp"
        android:focusable="true"
        android:hint="Levels:" />

    <!--<Button-->
        <!--android:id="@+id/btncolorpicker"-->
        <!--android:layout_width="25dp"-->
        <!--android:layout_height="25dp"-->
        <!--android:layout_alignBaseline="@+id/spinner3"-->
        <!--android:layout_alignBottom="@+id/spinner3"-->
        <!--android:layout_toEndOf="@+id/spinner3"-->
        <!--android:layout_toRightOf="@+id/spinner3"-->
        <!--android:background="@color/colorBlack"-->
        <!--android:textColor="@color/colorBlue"-->
        <!--android:text="c" />-->
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/spinner3"
        android:layout_alignBottom="@+id/spinner3"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:onClick="openPicker1"
        android:background="@drawable/plus_round_corner"
        android:text="C" />

    <Button
        android:id="@+id/button3"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/colorWhite"
        android:background="@color/colorAccent"
        android:text="DONE" />

</RelativeLayout>
