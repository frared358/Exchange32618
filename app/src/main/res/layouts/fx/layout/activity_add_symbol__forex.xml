<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorRedLight1"
    tools:context="com.affwl.exchange.fx.Add_symbol_Forex">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:gravity="center"
        android:minHeight="?attr/actionBarSize"
        app:navigationContentDescription="@string/abc_action_bar_up_description"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:subtitle="Forex"
        tools:ignore="MissingPrefix"
        fontPath="fonts/RobotoCondensed-Regular.ttf"
        app:subtitleTextColor="@color/colorWhite"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Add symbol">

        <AutoCompleteTextView
            android:textColorHighlight="@color/colorBlueGrey"
            android:id="@+id/autotv1"
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="65dp"
            android:layout_marginStart="65dp"
            android:visibility="gone" />
    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:id="@+id/ll_add_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar2"
        android:orientation="vertical"
        android:padding="10dp">


        <TextView
            android:id="@+id/tvforex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="AUDCAD"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvforex"
            android:text="Australian Dollar Vs Canadian Dollar" />

    </LinearLayout>
    <View
        android:id="@+id/viewf"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_margin="10dp"
        android:layout_below="@+id/ll_add_symbol"
        android:background="@color/colorBlack"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/viewf"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/viewf"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:visibility="gone"
        android:layout_marginTop="16dp"
        app:srcCompat="?android:attr/actionModeWebSearchDrawable"
        tools:ignore="NewApi" />
</RelativeLayout>
