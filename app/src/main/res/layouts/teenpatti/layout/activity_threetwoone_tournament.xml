<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tournamenttble"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/tournamentrecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg3">


        <!--<ImageView-->
        <!--android:id="@+id/handle_right"-->
        <!--android:layout_width="35dp"-->
        <!--android:layout_height="35dp"-->
        <!--android:layout_alignParentEnd="true"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:clickable="true"-->
        <!--android:src="@drawable/btn_handle_right" />-->


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <!--Left side ithree_two_one_leaderboardyout-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/back"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/back" />

                    <!--<ImageView-->
                        <!--android:id="@+id/info"-->
                        <!--android:layout_width="40dp"-->
                        <!--android:layout_height="40dp"-->
                        <!--android:layout_margin="5dp"-->
                        <!--android:src="@drawable/infogame" />-->
                </LinearLayout>
            </RelativeLayout>

            <!--Right side ithree_two_one_leaderboardyout-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!--<ImageView-->
                            <!--android:id="@+id/chat321"-->
                            <!--android:layout_width="40dp"-->
                            <!--android:layout_height="40dp"-->
                            <!--android:layout_margin="5dp"-->
                            <!--android:clickable="true"-->
                            <!--android:src="@drawable/chatgame" />-->

                        <ImageView
                            android:id="@+id/info"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/infogame" />
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>
        </RelativeLayout>


        <!--Tathree_two_one_leaderboardyout-->
        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">


            <ImageView
                android:id="@+id/table"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:src="@drawable/teenpattitableimage" />


            <RelativeLayout
                android:id="@+id/playerbg1relativeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/playerbg1"
                    android:layout_width="110dp"
                    android:layout_height="100dp"
                    android:layout_alignTop="@+id/table"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="70dp"
                    android:src="@drawable/myplayerbackground1"
                    tools:ignore="NotSibling" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignTop="@+id/playerbg1"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/playerinviteavatar" />


                <ImageView
                    android:id="@+id/playerbg3"
                    android:layout_width="110dp"
                    android:layout_height="100dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/table"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="70dp"
                    android:src="@drawable/myplayerbackground1"
                    tools:ignore="NotSibling" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/playerbg3"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/playerinviteavatar" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/playerbg2relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/playerbg1relativeLayout">

                <ImageView
                    android:id="@+id/playerbg2"
                    android:layout_width="110dp"
                    android:layout_height="100dp"
                    android:layout_below="@+id/relativeLayout2"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="35dp"
                    android:src="@drawable/myplayerbackground1"
                    tools:ignore="NotSibling,UnknownId" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignTop="@+id/playerbg2"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/playerinviteavatar" />


                <ImageView
                    android:id="@+id/playerbg4"
                    android:layout_width="110dp"
                    android:layout_height="100dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/table"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="35dp"
                    android:src="@drawable/myplayerbackground1"
                    tools:ignore="NotSibling" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/playerbg4"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/playerinviteavatar" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <ImageView
                        android:id="@+id/myplayer"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/yellow_circle" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/inner_player_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/myplayer"
                        android:src="@drawable/inner_img_profile"
                        android:layout_margin="5dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="true"
                        />

                    <TextView
                        android:id="@+id/nametext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_alignTop="@id/inner_player_img"
                        android:textColor="@color/Black"
                        android:background="@color/colorYellowGolden"
                        />
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/linearcardholder321"
                        android:layout_width="240dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/greencardholder"
                            android:layout_width="120dp"
                            android:layout_height="50dp"
                            android:background="#00ffffff"
                            android:gravity="bottom"
                            android:orientation="horizontal" />

                        <LinearLayout
                            android:id="@+id/bluecardholder"
                            android:layout_width="80dp"
                            android:layout_height="50dp"
                            android:layout_gravity="bottom"
                            android:background="#00ffffff"
                            android:orientation="horizontal" />

                        <LinearLayout
                            android:id="@+id/cyancardholder"
                            android:layout_width="40dp"
                            android:layout_height="50dp"
                            android:layout_gravity="bottom"
                            android:background="#00ffffff"
                            android:orientation="horizontal" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/cards321shifterbtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="GO" />

                    <LinearLayout
                        android:id="@+id/default321layout"
                        android:layout_width="240dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/card321_1"
                            android:layout_width="40dp"
                            android:layout_height="50dp"
                            android:src="@drawable/spade_ace" />

                        <ImageView
                            android:id="@+id/card321_2"
                            android:layout_width="40dp"
                            android:layout_height="50dp"
                            android:src="@drawable/spade_ace" />

                        <ImageView
                            android:id="@+id/card321_3"
                            android:layout_width="40dp"
                            android:layout_height="50dp"
                            android:src="@drawable/spade_ace" />

                        <ImageView
                            android:id="@+id/card321_4"
                            android:layout_width="40dp"
                            android:layout_height="50dp"
                            android:src="@drawable/spade_ace" />

                        <ImageView
                            android:id="@+id/card321_5"
                            android:layout_width="40dp"
                            android:layout_height="50dp"
                            android:src="@drawable/spade_ace" />

                        <ImageView
                            android:id="@+id/card321_6"
                            android:layout_width="40dp"
                            android:layout_height="50dp"
                            android:src="@drawable/spade_ace" />

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:id="@+id/dealer"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignTop="@+id/table"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/dealer"
                    tools:ignore="NotSibling" />
            </RelativeLayout>


        </RelativeLayout>


    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/teen_nav_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:fitsSystemWindows="false"
        app:headerLayout="@layout/leaderboard_popup" />

</android.support.v4.widget.DrawerLayout>
